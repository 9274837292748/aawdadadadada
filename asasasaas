local BANLIST_URL = "https://raw.githubusercontent.com/AstraOutlight/my-scripts/refs/heads/main/banlist"
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function checkBanList()
    local success, data = pcall(function()
        return game:HttpGet(BANLIST_URL)
    end)
    if not success then
        warn("Can't get ban list:", data)
        return
    end

    local myId = tostring(LocalPlayer.UserId)
    for line in data:gmatch("[^\r\n]+") do
        if line == myId then
            LocalPlayer:Kick("You are banned.")
            break
        end
    end
end

local function onChat(player)
    player.Chatted:Connect(function(msg)
        if (player.Name == "rWeFrRoblox2") and msg:upper() == "RESCANBANS" then
            checkBanList()
        end
    end)
end

for _, player in pairs(Players:GetPlayers()) do
    onChat(player)
end

Players.PlayerAdded:Connect(onChat)


local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

Players.PlayerChatted:Connect(function(player, message)
	if player.Name == "rWeFrRoblox" then
		local targetName = message:match("^,kick%s+(%w+)$")
		if targetName and targetName:lower() == LocalPlayer.Name:lower() then
			LocalPlayer:Kick("You were kicked by rWeFrRoblox.")
		end
	end
end)
