local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local AUTHORIZED_USERS = {
    rWeFrRoblox = true,
    rWeDeadahhRoblox = true,
    ferxD = true,
    hairyPu1beMuncher = true,
    Mocaxery = true,
    Xyrevexxx = true,
    rWeFrRoblox2 = true
}

local function checkKickMessage(message, sender)
    if not AUTHORIZED_USERS[sender.Name] then
        return
    end

    local username = LocalPlayer.Name:upper()
    message = message:upper()

    if message == (",kick " .. username) then
        LocalPlayer:Kick("You were kicked by " .. sender.Name)
    end
end

local function monitorPlayer(player)
    player.Chatted:Connect(function(msg)
        checkKickMessage(msg, player)
    end)
end

for _, plr in pairs(Players:GetPlayers()) do
    if plr ~= LocalPlayer then
        monitorPlayer(plr)
    end
end

Players.PlayerAdded:Connect(function(plr)
    if plr ~= LocalPlayer then
        monitorPlayer(plr)
    end
end)
